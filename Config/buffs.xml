<configs>

    <append xpath="/buffs">

        <buff name="buffPoweredFlashLight">

            <update_rate value="1" />

            <effect_group name="poweredFlashLight">
                <triggered_effect trigger="onSelfBuffUpdate" action="MinEventActionDecayFlashLight, PoweredFlashlights" event="action_decay_flashlight" />
            </effect_group>
        </buff>

        <buff name="buffPoweredHeadLight">

            <update_rate value="1" />

            <effect_group name="poweredHeadLight">
                <triggered_effect trigger="onSelfBuffUpdate" action="MinEventActionDecayHeadLight, PoweredFlashlights" event="action_decay_flashlight" />
            </effect_group>
        </buff>

    </append>
</configs>