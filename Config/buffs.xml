<configs>

    <append xpath="/buffs/buff[@name='buffStatusCheck01']">

        <effect_group>
            <requirement name="HasBuff" buff="buffFlashlightDisabled" />
            <requirement name="RequirementHasLightActivated, PoweredFlashLights" />

            <triggered_effect trigger="onSelfBuffUpdate" action="MinEventActionTurnOffLights, PoweredFlashLights" />
            <triggered_effect trigger="onSelfBuffUpdate" action="LogMessage" message="flashLight buff update" />
        </effect_group>

    </append>

    <append xpath="/buffs">

        <buff name="buffPoweredFlashLight" hidden="true">
            <update_rate value="1" />
            <effect_group name="poweredFlashLight">
                <triggered_effect trigger="onSelfBuffUpdate" action="MinEventActionDecayFlashLight, PoweredFlashlights" />
            </effect_group>
        </buff>

        <buff name="buffPoweredHeadLight" hidden="true">
            <update_rate value="1" />
            <effect_group name="poweredHeadLight">
                <triggered_effect trigger="onSelfBuffUpdate" action="MinEventActionDecayHeadLight, PoweredFlashlights" />
            </effect_group>
        </buff>

        <buff name="buffPoweredGunLight" hidden="true">
            <update_rate value="1" />
            <effect_group name="poweredHeadLight">
                <triggered_effect trigger="onSelfBuffUpdate" action="MinEventActionDecayGunLight, PoweredFlashlights" />
            </effect_group>
        </buff>

        <buff name="buffFlashlightDisabled">
        </buff>

    </append>
</configs>